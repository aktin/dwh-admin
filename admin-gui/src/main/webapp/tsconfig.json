{
    "compilerOptions": {
    "downlevelIteration": true,
        "target": "es2015",
        "module": "esnext",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [ "es2015", "dom" ],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowUnusedLabels": false,
        "noImplicitReturns": true
    },
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "include": [
    "app/**/*.d.ts"
  ]
}
